<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/title"
            style="@style/Aw.Typography.Title.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_16"
            android:layout_marginTop="@dimen/standard_16"
            android:layout_marginBottom="@dimen/tiny_8"
            tools:text="Header Title" />

    <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/text_wire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="5dp"
            android:text="@string/wire" />

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/standard_16"
            android:thumb="@drawable/switch_ios_selector"
            android:track="@drawable/switch_ios_track"
            android:visibility="visible"
            tools:visibility="visible" />

</LinearLayout>
